<Window x:Class="Caesar_decoder_encoder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Caesar_decoder_encoder"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="{StaticResource background}">
        <DockPanel>
            <Menu DockPanel.Dock="Top" Background="{StaticResource main}">
                <MenuItem Header="Опции">
                    <MenuItem Header="Сменить алфавит"></MenuItem>
                </MenuItem>
            </Menu>
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBox Grid.Row="0" 
                         MinHeight="100"></TextBox>
                <DockPanel 
                             Grid.Row="1"
                            Margin="0,20,0,0">
                    <TextBlock DockPanel.Dock="Left">Ключ</TextBlock>
                    <TextBox Margin="20,0,0,0"></TextBox>
                </DockPanel>
               
                <StackPanel Orientation="Horizontal" 
                            Grid.Row="2" 
                            Margin="0,20,0,0">
                    <Button>Зашифровать</Button>
                    <Button Margin="20,0,0,0">Показать оригинал</Button>
                </StackPanel>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
